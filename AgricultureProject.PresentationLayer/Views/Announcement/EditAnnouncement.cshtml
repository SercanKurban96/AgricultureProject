@model AgricultureProject.EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DUYURU GÜNCELLEME SAYFASI</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.AnnouncementID)
                    <label>Başlık *</label>
                    <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık giriniz" asp-for="AnnouncementTitle" />
                </div>
                <div class="form-group">
                    <label>Açıklama *</label>
                    <span asp-validation-for="AnnouncementDescription" class="text-danger"></span>
                    <textarea cols="30" rows="5" asp-for="AnnouncementDescription" class="form-control" placeholder="Açıklama giriniz"></textarea>
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <span asp-validation-for="AnnouncementDate" class="text-danger"></span>
                    <input type="date" class="form-control" id="exampleInputName1" placeholder="Tarih giriniz" asp-for="AnnouncementDate" />
                </div>
                <button type="submit" class="btn btn-outline-info">Değişiklikleri Kaydet</button>
            </form>
        </div>
    </div>
</div>