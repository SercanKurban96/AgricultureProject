@model AgricultureProject.EntityLayer.Concrete.Contact

<div class="col-md-9 contact-middle">
    <h2>Mesaj Formu</h2>
    @using (Html.BeginForm("SendMessage", "Default", FormMethod.Post))
    {
        <div class="form-agileinfo">
            <p>Adınız Soyadınız</p>
            <input type="text" asp-for="ContactName" placeholder="Ad Soyad" required="" />
            <p>Mail Adresiniz</p>
            <input type="email" asp-for="ContactMail" placeholder="Mail" required="" />
        </div>
        <div class="form-agileits-w3layouts">
            <p>Mesajınız</p>
            <textarea asp-for="ContactMessage" placeholder="Mail" required=""></textarea>
            <input type="submit" value="Mesajı Gönder">
        </div>
        <div class="clearfix"></div>
    }
</div>