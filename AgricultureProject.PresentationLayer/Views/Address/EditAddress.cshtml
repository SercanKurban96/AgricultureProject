@model AgricultureProject.EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">ADRES BİLGİSİ DÜZENLEME SAYFASI</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.AddressID)
                    <label for="exampleInputName1">Açıklama 1</label>
                    <span asp-validation-for="AddressDescription1" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama 1" asp-for="AddressDescription1" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 2</label>
                    <span asp-validation-for="AddressDescription2" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama 2" asp-for="AddressDescription2" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 3</label>
                    <span asp-validation-for="AddressDescription3" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama 3" asp-for="AddressDescription3" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 4</label>
                    <span asp-validation-for="AddressDescription4" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Açıklama 4" asp-for="AddressDescription4" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Harita Konumu</label>
                    <span asp-validation-for="AddressMapInfo" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Harita Bilgisi" asp-for="AddressMapInfo" />
                </div>
                <button type="submit" class="btn btn-outline-info">Değişiklikleri Kaydet</button>
            </form>
        </div>
    </div>
</div>