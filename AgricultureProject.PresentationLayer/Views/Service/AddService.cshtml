@model AgricultureProject.PresentationLayer.Models.ServiceAddViewModel
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">YENİ HİZMET KAYDI</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık *</label>
                    <span asp-validation-for="ServiceTitle" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık giriniz" asp-for="ServiceTitle" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Görsel *</label>
                    <span asp-validation-for="ServiceImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Görsel" asp-for="ServiceImageUrl" />
                </div>
                <div class="form-group">
                    <label>Açıklama *</label>
                    <span asp-validation-for="ServiceDescription" class="text-danger"></span>
                    <textarea cols="30" rows="5" asp-for="ServiceDescription" class="form-control" placeholder="Açıklama giriniz"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>